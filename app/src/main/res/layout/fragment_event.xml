<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8F8"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Add Event"
            android:textSize="12pt"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/et_event_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:hint="Event title:"
            android:textColorHint="@color/black"
            android:fontFamily="serif"
            android:drawableStart="@drawable/ic_event"
            android:background="@drawable/edt_rounded"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <EditText
            android:id="@+id/et_event_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:hint="Date:"
            android:textColorHint="@color/black"
            android:fontFamily="serif"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="12dp"
            android:background="@drawable/edt_rounded"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <EditText
            android:id="@+id/et_event_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:hint="Time:"
            android:textColorHint="@color/black"
            android:fontFamily="serif"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="12dp"
            android:background="@drawable/edt_rounded"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <EditText
            android:id="@+id/et_event_place"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:hint="Place:"
            android:textColorHint="@color/black"
            android:fontFamily="serif"
            android:drawableStart="@drawable/ic_place"
            android:drawablePadding="12dp"
            android:background="@drawable/edt_rounded"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <EditText
            android:id="@+id/et_event_priority"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:hint="Priority:"
            android:textColorHint="@color/black"
            android:fontFamily="serif"
            android:drawableStart="@drawable/ic_priority"
            android:drawablePadding="12dp"
            android:background="@drawable/edt_rounded"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_event"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style"
                    android:elevation="8dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cancel_add_event"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style"
                    android:elevation="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>